{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "scripts"]
}
